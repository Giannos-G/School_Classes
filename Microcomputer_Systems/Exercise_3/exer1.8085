IN 10H
			MVI A,0DH	;ARXIKOPOIOUME MASA GIA
			SIM		;EPILOGI DIAKOPIS
			EI
WAIT: 			JMP WAIT   	;LOOP UNTIL INTERRUPTION

INTR_ROUTINE:		MVI A,FFH  	;KATHARISMA TON DIGITS 7-segment
			STA 3800H

			EI         	;EPITREPSI
			MVI D,3DH   	;D=60 SECONDS
			LXI B,03E8H	;ÂC=1000 GIA TIN XRONOKATHISTERISI

LIGHT:			MVI A,FFH
			STA 3800H
			MVI A,10H  	;EPILOGI 1ou APO ARISTERA
			STA 2800H

			MOV A,D   
			DCR A
			MVI E,FFH  	;Å COUNTER GIA DEKADES
DECA:			INR E
			SUI 0AH			
			JNC DECA
			ADI 0AH   	;Á COUNTER GIA MONADES

			LXI H,085BH  	;(DATABASE1)
			ADD L    
			MOV L,A  	;L=L+MONADES
			MOV A,M  	;EPILOGI SOSTIS ANAPARASTASIS
			STA 3800H 	;PSIFIOU APO PINAKA

			MVI A,FFH
			STA 3800H
			MVI A,20H  	;EPILOGI 2ou APO ARISTERA
			STA 2800H
			LXI H,085BH  
			MOV A,E
			ADD L
			MOV L,A  	;L=L+DEKADES
			MOV A,M  	;EPILOGI SOSTIS ANAPARASTASIS
			STA 3800H  	;PSIFIOU APO PINAKA

			MVI A,00H  	;TURN ON LEDS
			STA 3000H
			CALL DELB  	;XRONOKATHISTERISI 1s

			DCR D   		;D=D-1
			JNZ LIGHT 	;UNTIL D=0
			MVI A,FFH	;TUN OFF LEDS
			STA 3000H
			JMP WAIT 	;EPISTROFI STIN ANAMONI

DATABASE1:		DB C0H DB F9H DB A4H DB B0H DB 99H 
			DB 92H DB 82H DB F8H DB 80H DB 90H
END
