IN 10H
LXI B,00C8H
START:	CALL KIND	;INPUT 
	ANI FFH	;UPDATE FLAGS
	DCR A		;MAKE SURE IT STARTS FROM 1
	JZ LSB		;JUMP TO THE RIGHT BIT
	DCR A
	JZ LSB1
	DCR A
	JZ LSB2
	DCR A
	JZ LSB3
	DCR A
	JZ LSB4
	DCR A
	JZ LSB5
	DCR A
	JZ LSB6
	DCR A
	JZ LSB7
	HLT

	;ENABLING APPROPRIATE LED FOR THE RIGHT INPUT
LSB:	MVI A,FEH
	STA 3000H
	JMP START

LSB1:	MVI A,FDH
	STA 3000H
	JMP START

LSB2:	MVI A,FBH
	STA 3000H
	JMP START

LSB3:	MVI A,F7H
	STA 3000H
	JMP START

LSB4:	MVI A,EFH
	STA 3000H
	JMP START

LSB5:	MVI A,DFH
	STA 3000H
	JMP START

LSB6:	MVI A,BFH
	STA 3000H
	JMP START

LSB7:	MVI A,7FH
	STA 3000H
	JMP START
END
